@using Vidly.Models
@using Vidly.ViewModels
@model Vidly.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr><td>Movie</td></tr>
    </thead>
    <tbody>
        @foreach (Movie movie in Model.Movies)
        {
            <tr><td>@movie.Name</td></tr>
        }

    </tbody>
</table>
